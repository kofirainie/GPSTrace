<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/map_type_title_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_color"
    android:paddingBottom="1dp"
    android:paddingTop="6dp" >

    <View
        android:id="@+id/map_type_title_top_divider"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/common_border_color" />

    <LinearLayout
        android:id="@+id/map_type_title_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginBottom="6dp"
        android:gravity="center_vertical"
        android:layout_below="@id/map_type_title_top_divider"
        android:orientation="horizontal" >

        <View
            android:id="@+id/nmap_type_title_bgcolor_tv"
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="12dp"
            android:background="@color/blue_backgroud_color" />

        <TextView
            android:id="@+id/map_type_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/map_type_title_text_color"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>